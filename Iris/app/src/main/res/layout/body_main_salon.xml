<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/layout_body"
    android:clickable="false"
    android:baselineAligned="true"
    android:layout_margin="10dp">


    <ImageButton
        style="@style/Buttons"
        android:text="@string/hair"
        android:id="@+id/hair"
        android:background="@drawable/button_press"
        android:src="@mipmap/ic_emoticon"
        android:scaleType="centerInside"
        android:layout_marginLeft="75dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="49dp" />

    <ImageButton
        style="@style/Buttons"
        android:text="@string/nails"
        android:id="@+id/nails"
        android:onClick="goNailsActivity"
        android:clickable="true"
        android:singleLine="false"
        android:background="@drawable/button_press"
        android:src="@mipmap/ic_thumb_up"
        android:scaleType="centerInside"
        android:visibility="visible"
        android:layout_alignTop="@+id/hair"
        android:layout_toRightOf="@+id/hair"
        android:layout_toEndOf="@+id/hair"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="33dp" />

    <ImageButton
        style="@style/Buttons"
        android:text="@string/eyebrows"
        android:id="@+id/eyebrows"
        android:background="@drawable/button_press"
        android:clickable="true"
        android:onClick="goEyesActivity"
        android:layout_gravity="center"
        android:src="@mipmap/ic_eye"
        android:scaleType="centerInside"
        android:contentDescription="Глаза"
        android:cropToPadding="false"
        android:focusable="false"
        android:visibility="visible"
        android:layout_below="@+id/textView2"
        android:layout_toLeftOf="@+id/nails"
        android:layout_toStartOf="@+id/nails"
        android:layout_marginTop="55dp" />

    <ImageButton
        style="@style/Buttons"
        android:text="@string/bodyface"
        android:id="@+id/bodyface"
        android:background="@drawable/button_press"
        android:clickable="true"
        android:focusable="true"
        android:scaleType="centerInside"
        android:src="@mipmap/ic_play"
        android:visibility="visible"
        android:layout_alignTop="@+id/eyebrows"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <ImageButton
        style="@style/Buttons"
        android:text="@string/epilation"
        android:id="@+id/epilation"
        android:src="@drawable/ic_gender_female"
        android:scaleType="centerInside"
        android:visibility="visible"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_marginTop="59dp" />

    <ImageButton
        style="@style/Buttons"
        android:text="@string/men"
        android:id="@+id/men"
        android:gravity="bottom|center"
        android:baselineAlignBottom="false"
        android:scaleType="centerInside"
        android:src="@mipmap/ic_human"
        android:visibility="visible"
        android:layout_alignTop="@+id/epilation"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hair"
        android:id="@+id/textView2"
        android:layout_below="@+id/hair"
        android:layout_alignLeft="@+id/hair"
        android:layout_alignStart="@+id/hair"
        android:paddingLeft="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nails"
        android:id="@+id/textView3"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignLeft="@+id/nails"
        android:layout_alignStart="@+id/nails"
        android:paddingLeft="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/eyebrows"
        android:id="@+id/textView4"
        android:layout_below="@+id/eyebrows"
        android:layout_alignLeft="@+id/eyebrows"
        android:layout_alignStart="@+id/eyebrows"
        android:paddingLeft="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bodyface"
        android:id="@+id/textView5"
        android:layout_below="@+id/bodyface"
        android:layout_alignLeft="@+id/bodyface"
        android:layout_alignStart="@+id/bodyface" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/epilation"
        android:id="@+id/textView6"
        android:layout_below="@+id/epilation"
        android:layout_alignLeft="@+id/epilation"
        android:layout_alignStart="@+id/epilation"
        android:paddingLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/men"
        android:id="@+id/textView7"
        android:layout_below="@+id/men"
        android:layout_alignLeft="@+id/men"
        android:layout_alignStart="@+id/men"
        android:paddingLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/select_serviceOne"
        android:id="@+id/textView8"
        android:textColor="#757575"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <!--Место для рекламного агрегатора-->
    <!--<LinearLayout
        style="@style/layout_advert"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    </LinearLayout>-->

</RelativeLayout>

