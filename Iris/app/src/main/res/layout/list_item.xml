<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="200dp"
    style="@style/layout_body"
    android:id="@+id/list_item"
    android:layout_margin="5dp"
    android:background="@color/buttons_block">


    <TextView
        android:id="@+id/id_salon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/salon_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            style="@style/Buttons_block"/>

        <TextView
            android:id="@+id/salon_address"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            style="@style/Buttons_block"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="73dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/comm_text"
                android:id="@+id/textView"
                style="@style/Buttons_block"
                android:layout_gravity="bottom|right" />

            <ImageView
                android:layout_width="53dp"
                android:layout_height="108dp"
                android:id="@+id/imageView"
                android:src="@mipmap/comm_white" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/salon_rate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            style="@style/Buttons_block"/>

        <TextView
            android:id="@+id/salon_cost"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            style="@style/Buttons_block"/>

    </LinearLayout>

</LinearLayout>
