<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Base.Light">
        <!-- Customize your theme here. -->
    </style>

    <style name="Buttons">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/buttons</item>
        <item name="android:gravity">center</item>
        <item name="android:typeface">serif</item>
        <item name="android:textColor">@color/text_head</item>
    </style>

    <style name="Buttons_block">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/buttons_block</item>
        <item name="android:gravity">center</item>
        <item name="android:typeface">serif</item>
        <item name="android:textColor">@color/text_block</item>

    </style>

    <style name="Buttons_head">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/buttons_head</item>
        <item name="android:textColor">@color/text_head</item>
        <item name="android:typeface">serif</item>
    </style>

   <style name="layout_head">
       <item name="android:background">@color/layout_head</item>
   </style>

    <style name="layout_body">
    <item name="android:background">@color/layout_body</item>
    </style>
    <style name="layout_body_right">
        <item name="android:background">@color/layout_body</item>
    </style>

</resources>
